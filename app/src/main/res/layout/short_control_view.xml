<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/port_type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/port_type"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"/>

    <TextView
        android:id="@+id/view_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="@dimen/short_description_textsize"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/text_margin"/>

    <ImageView
        android:id="@+id/direction_imageview"
        android:layout_width="@dimen/direction_image_size"
        android:layout_height="@dimen/direction_image_size"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>